# Server Configuration
NODE_ENV=production
PORT=3000

# Webhook Feature (Optional)
# Set to "true" to enable webhook functionality
# Requires Redis and SQLite for operation
ENABLE_WEBHOOKS=false

# Webhook Database Configuration
# Path to SQLite database file for webhook registrations
WEBHOOK_DATABASE_URL=file:./webhook.db

# Redis Configuration (Required if ENABLE_WEBHOOKS=true)
# Host and port for Redis server used by Bull queue
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_password_here  # Optional: Redis password
# REDIS_DB=0  # Optional: Redis database number (default: 0)

# Logging Configuration
# LOG_LEVEL=info  # Options: error, warn, info, debug
